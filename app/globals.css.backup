/* Features grid (About page) */
.features {
  display: grid;
  gap: 14px;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr))
}

.feature {
  background: #fff;
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 16px;

@import "tailwindcss";

:root {
  --mint: #06C270;
  --mint-700: #059C5A;
  --mint-50: #F0FDF7;
  --text: #1D1D1F;
  --text-secondary: #6E6E73;
  --muted: #86868B;
  --bg: #ffffff;
  --bg-soft: #FBFBFD;
  --bg-elevated: #F5F5F7;
  --border: #D2D2D7;
  --border-light: #E8E8ED;
  --shadow: 0 2px 16px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.08);
  --shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.12);
  --container: 1280px;
  --radius-sm: 12px;
  --radius-md: 16px;
  --radius-lg: 24px;
  --transition: cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.emoji {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: var(--radius-md);
  background: var(--bg-soft);
}

.card {
  height: 360px;
  display: flex;
  flex-direction: column;
}

.card .pic {
  height: 180px !important;
  padding: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card .body h3 {
  min-height: 40px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card .btn {
  margin-top: auto !important;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Lexend', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
  padding-top: 80px;
  font-weight: 400;
  letter-spacing: -0.01em;
}

@media (max-width: 880px) {
  body {
    padding-top: 80px;
  }
}

img {
  max-width: 100%;
  display: block;
}

.container {
  max-width: var(--container);
  margin: auto;
  padding: 0 max(24px, env(safe-area-inset-left));
}

/* Header - Floating Navigation */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid rgba(229, 231, 235, 0.5);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
}

.header.floating-nav.scrolled {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  border-bottom: 1px solid rgba(229, 231, 235, 0.8);
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.header.floating-nav {
  animation: slideDown 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.header .bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 80px;
  padding: 0 20px;
  transition: all 0.3s ease;
}

.header.floating-nav.scrolled .bar {
  min-height: 70px;
}

.logo {
  font-weight: 800;
  font-size: 1.7rem
}

.logo span {
  color: var(--mint)
}

.nav {
  display: flex;
  align-items: center;
  gap: 12px
}

.nav a {
  color: #475467;
  padding: 10px 12px;
  border-radius: 12px;
  font-weight: 600
}

.nav a {
  position: relative;
  color: #475467;
  padding: 10px 12px;
  font-weight: 600;
  text-decoration: none;
  transition: color 0.25s ease;
}

/* Create the underline - but not for nav-btn */
.nav a:not(.nav-btn)::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%) scaleX(0);
  transform-origin: center;
  width: 100%;
  height: 3px;
  background: var(--mint);
  border-radius: 3px;
  transition: transform 0.3s ease;
}

/* Hover effect */
.nav a:not(.nav-btn):hover::after {
  transform: translateX(-50%) scaleX(1);
}

/* Optional: active link */
.nav a:not(.nav-btn).active::after {
  transform: translateX(-50%) scaleX(1);
}

/* Remove underline effect from nav-btn */
.nav .nav-btn::after {
  display: none;
}

.cart-btn {
  background: linear-gradient(135deg, var(--mint), var(--mint-700));
  color: #fff;
  padding: 10px 14px;
  border-radius: 12px;
  font-weight: 700;
  box-shadow: var(--shadow)
}

.hamb {
  display: none;
  background: transparent;
  border: 0;
  font-size: 1.7rem;
  padding: 8px 10px
}

/* Show hamb on mobile (handled by media query or Tailwind classes in component, but keeping legacy for safety) */
@media (max-width: 768px) {
  .hamb {
    display: block;
  }
}

.drawer {
  position: fixed;
  right: 0;
  top: 72px;
  bottom: 0;
  width: 82%;
  max-width: 360px;
  background: #fff;
  border-left: 1px solid var(--border);
  box-shadow: var(--shadow);
  padding: 16px;
  z-index: 80;
  transform: translateX(110%);
  transition: transform .25s ease;
}

.drawer a {
  display: block;
  padding: 12px 12px;
  border-radius: 10px;
  color: #1f2937;
  transition: background .2s ease;
}

.drawer a:hover {
  background: var(--bg-soft);
}

.drawer.show {
  transform: translateX(0);
}


/* Hero */
.hero {
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid var(--border)
}

/* Carousel container - Mobile Optimized */
.carousel {
  position: relative;
  width: 100%;
  overflow: hidden;
  height: 250px;
  /* Increased height for mobile to show full banner */
}

.carousel .slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #f8fafc;
  /* Light background to fill empty space */
  transition: opacity 0.5s ease-in-out;
  opacity: 0;
}

.carousel .slide.active {
  opacity: 1;
}

/* Responsive heights */
@media (min-width: 480px) {
  .carousel {
    height: 350px;
  }

  .carousel .slide {
    background-size: cover;
    background-color: transparent;
  }
}

@media (min-width: 768px) {
  .carousel {
    height: 450px;
  }
}

@media (min-width: 1024px) {
  .carousel {
    height: 600px;
  }
}

@media (min-width: 1280px) {
  .carousel {
    height: 650px;
  }
}

/* Sections */
.section {
  padding: 80px 0;
  animation: fadeIn 0.8s var(--transition);
}

@media (max-width: 768px) {
  .section {
    padding: 56px 0;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section h2 {
  text-align: center;
  margin-bottom: 48px;
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text);
  letter-spacing: -0.03em;
  line-height: 1.1;
}

@media (max-width: 768px) {
  .section h2 {
    font-size: 2rem;
    margin-bottom: 32px;
  }
}

/* Typography & Utilities */
h1 {
  font-size: 3rem;
  font-weight: 700;
  letter-spacing: -0.03em;
  line-height: 1.1;
}

h2 {
  font-size: 2.5rem;
  font-weight: 700;
  letter-spacing: -0.03em;
  line-height: 1.15;
}

h3 {
  font-size: 1.75rem;
  font-weight: 600;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

h4 {
  font-size: 1.25rem;
  font-weight: 600;
  letter-spacing: -0.01em;
  line-height: 1.3;
}

p {
  font-size: 1.0625rem;
  line-height: 1.6;
  color: var(--text-secondary);
}

@media (max-width: 768px) {
  h1 {
    font-size: 2.25rem;
  }

  h2 {
    font-size: 1.875rem;
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    font-size: 1rem;
  }
}

a {
  color: inherit;
  text-decoration: none;
  transition: color 0.2s var(--transition);
}

button {
  font: inherit;
}

.muted {
  color: var(--muted);
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 14px 24px;
  border-radius: var(--radius-sm);
  border: 1.5px solid var(--border);
  background: #fff;
  color: var(--text);
  font-weight: 500;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.25s var(--transition);
  letter-spacing: -0.01em;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--border-light);
}

.btn:active {
  transform: translateY(0);
}

.btn-primary {
  background: linear-gradient(135deg, var(--mint), var(--mint-700));
  color: #fff;
  border-color: transparent;
  font-weight: 600;
}

.btn-primary:hover {
  box-shadow: 0 12px 32px rgba(6, 194, 112, 0.3);
  transform: translateY(-2px);
}

.btn-submit {
  width: 100%;
  padding: 18px 28px;
  font-size: 1.0625rem;
  font-weight: 600;
  gap: 12px;
  margin-top: 12px;
  box-shadow: 0 4px 16px rgba(6, 194, 112, 0.25);
  position: relative;
  overflow: hidden;
}

.btn-submit:hover {
  box-shadow: 0 12px 32px rgba(6, 194, 112, 0.35);
  transform: translateY(-3px);
}

.btn-submit span:last-child {
  font-size: 1.3rem;
  transition: transform 0.25s var(--transition);
}

.btn-submit:hover span:last-child {
  transform: translateX(4px);
}

/* Header polish */
.header {
  box-shadow: 0 8px 24px rgba(16, 24, 40, .04)
}

.nav a {
  transition: background .2s ease, color .2s ease
}

.nav a.active,
.nav a:focus {
  outline: none;
  background: var(--bg-soft)
}

.cart-btn {
  position: relative
}

.cart-btn:hover {
  filter: saturate(1.05) brightness(1.02)
}

/* Drawer */
.drawer a {
  transition: background .2s ease
}

.drawer a:hover {
  background: var(--bg-soft)
}

/* Categories */
/* Categories */
.grid {
  display: grid;
  gap: 16px;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  justify-content: center;
}

.cat {
  background: var(--bg-soft);
  border: 1px solid var(--border);
  border-radius: 20px;
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.cat:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 24px rgba(16, 24, 40, 0.08);
  background: rgba(54, 193, 153, 0.06);
}

.cat img {
  width: 100%;
  aspect-ratio: 1 / 1;
  /* makes image perfectly square */
  object-fit: cover;
  border-radius: 20px;
}

.cat span {
  display: block;
  font-weight: 700;
  padding: 10px;
  font-size: 0.95rem;
  color: var(--text);
}

/* Responsive: 2 per row on mobile */
@media (max-width: 600px) {
  .grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .cat img {
    aspect-ratio: 1 / 1;
  }
}

/* Products - Zepto Style (Legacy) */
.products {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  justify-content: start;
  padding: 20px 0;
}

@media (min-width: 768px) {

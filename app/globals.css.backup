  color: var(--muted);
  font-weight: 600;
  font-size: .85rem;
  line-height: 1.2;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}

.badges {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 14px
}

/* Price Filter Styles */
.price-filter-container {
  background: #fff;
  padding: 20px;
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
}

.filter-title {
  font-size: 1.1rem;
  font-weight: 700;
  margin-bottom: 20px;
  color: var(--text);
}

.slider-container {
  position: relative;
  width: 100%;
  height: 30px;
  margin-bottom: 20px;
}

.slider {
  position: relative;
  width: 100%;
}

.slider__track,
.slider__range {
  position: absolute;
  border-radius: 3px;
  height: 5px;
}

.slider__track {
  background-color: var(--border-light);
  width: 100%;
  z-index: 1;
}

.slider__range {
  background-color: var(--mint);
  z-index: 2;
}

.thumb {
  -webkit-appearance: none;
  appearance: none;
  -webkit-tap-highlight-color: transparent;
  pointer-events: none;
  position: absolute;
  height: 0;
  width: 100%;
  outline: none;
}

.thumb--left {
  z-index: 3;
}

.thumb--right {
  z-index: 4;
}

/* Webkit thumb */
.thumb::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  -webkit-tap-highlight-color: transparent;
  background-color: #fff;
  border: 2px solid var(--mint);
  border-radius: 50%;
  box-shadow: 0 0 1px 1px #ced4da;
  cursor: pointer;
  height: 20px;
  width: 20px;
  margin-top: 4px;
  pointer-events: all;
  position: relative;
  z-index: 5;
  transition: transform 0.1s ease;
}

.thumb::-webkit-slider-thumb:hover {
  transform: scale(1.1);
}

/* Moz thumb */
.thumb::-moz-range-thumb {
  background-color: #fff;
  border: 2px solid var(--mint);
  border-radius: 50%;
  box-shadow: 0 0 1px 1px #ced4da;
  cursor: pointer;
  height: 20px;
  width: 20px;
  margin-top: 4px;
  pointer-events: all;
  position: relative;
  z-index: 5;
  transition: transform 0.1s ease;
}

.thumb::-moz-range-thumb:hover {
  transform: scale(1.1);
}

.price-inputs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.price-field {
  display: flex;
  align-items: center;
  background: var(--bg-soft);
  padding: 8px 12px;
  border-radius: 8px;
  border: 1px solid var(--border-light);
  flex: 1;
}

.price-field span {
  font-weight: 600;
  color: var(--text-secondary);
  margin-right: 4px;
}

.price-field input {
  width: 100%;
  border: none;
  background: transparent;
  font-weight: 600;
  color: var(--text);
  outline: none;
  font-size: 0.95rem;
  -moz-appearance: textfield;
}

.price-field input::-webkit-outer-spin-button,
.price-field input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.separator {
  color: var(--text-secondary);
  font-weight: 600;
}

/* Filter Trigger Button */
.filter-trigger-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 12px 16px;
  background: #fff;
  border: 1px solid var(--border);
  border-radius: 12px;
  font-weight: 600;
  margin-bottom: 20px;
  box-shadow: var(--shadow);
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.95rem;
  color: var(--text);
}

.filter-trigger-btn:hover {
  border-color: var(--mint);
  background: var(--mint-50);
  transform: translateY(-1px);
  box-shadow: var(--shadow-lg);
}

.filter-trigger-btn svg {
  flex-shrink: 0;
}

/* Filter Drawer - Works on both mobile and desktop */
.filter-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.filter-drawer.open {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
}

.filter-drawer-content {
  background: #fff;
  border-radius: 16px;
  padding: 0;
  width: 90%;
  max-width: 480px;
  max-height: 85vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s ease;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.filter-drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 24px;
  border-bottom: 1px solid var(--border-light);
}

.filter-drawer-header h3 {
  font-size: 1.25rem;
  font-weight: 700;
  margin: 0;
  color: var(--text);
}

.close-btn {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: var(--text-secondary);
  cursor: pointer;
  padding: 4px 8px;
  line-height: 1;
  transition: color 0.2s ease;
}

.close-btn:hover {
  color: var(--text);
}

.filter-drawer-content .price-filter-container {
  margin: 24px;
  box-shadow: none;
  border: none;
  padding: 0;
}

.filter-drawer-footer {
  padding: 20px 24px;
  border-top: 1px solid var(--border-light);
  background: var(--bg-soft);
}

@keyframes slideIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }

  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Mobile adjustments */
@media (max-width: 600px) {
  .filter-drawer-content {
    width: 95%;
    max-width: none;
    border-radius: 16px 16px 0 0;
    position: absolute;
    bottom: 0;
    animation: slideUp 0.3s ease;
  }

  .filter-drawer.open {
    align-items: flex-end;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}/* ============================================
   LOGIN BUTTON STYLING
   ============================================ */
/* Desktop navigation login button */
.nav .nav-btn {
    background: linear-gradient(135deg, var(--mint), var(--mint-700));
    color: #fff !important;
    padding: 10px 18px;
    border-radius: 12px;
    font-weight: 700;
    box-shadow: 0 2px 8px rgba(6, 194, 112, 0.25);
    transition: all 0.3s ease;
}

.nav .nav-btn:hover {
    box-shadow: 0 4px 16px rgba(6, 194, 112, 0.35);
    transform: translateY(-2px);
    filter: saturate(1.05) brightness(1.05);
}

/* Mobile drawer login button */
.drawer .nav-btn {
    background: linear-gradient(135deg, var(--mint), var(--mint-700)) !important;
    color: #fff !important;
    padding: 10px 18px;
    border-radius: 12px;
    font-weight: 700;
    box-shadow: 0 2px 8px rgba(6, 194, 112, 0.25) !important;
    margin-top: 8px;
    transition: all 0.3s ease;
    border: none !important;
}

.drawer .nav-btn:hover {
    box-shadow: 0 4px 16px rgba(6, 194, 112, 0.35) !important;
    transform: translateY(-2px);
    filter: saturate(1.05) brightness(1.05);
}
